// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Enums ---
enum UserRole {
  USER
  ADMIN
}

// --- Auth.js (NextAuth) Core Models ---

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String? // Nullable because OAuth users (Google) won't have a password
  role          UserRole  @default(USER) // Controls access to Admin Panel

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Auth Relations
  accounts Account[]
  sessions Session[]

  // --- Gamification & LMS Data ---
  xp            Int      @default(0)
  currentStreak Int      @default(0)
  lastLogin     DateTime @default(now())

  // LMS Relations
  progress    UserProgress[]
  reflections Reflection[]
  bookmarks   Bookmark[]
  flashcards  UserFlashcardProgress[]
  badges      UserBadge[]
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id      String   @id @default(uuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model PasswordResetToken {
  id      String   @id @default(uuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

// --- LMS Content Models ---

model Lesson {
  id                  Int     @id @default(autoincrement())
  title               String
  urduTitle           String?
  description         String?
  detailedDescription String? @db.Text

  // Metadata
  surahReference String?
  surahNo        String?
  verses         String?
  part           String // Category

  // Content Assets (Primary)
  audioUrl String?

  // Access Control
  minRole UserRole @default(USER)

  // Relations
  resources   Resource[] // <--- NEW: Link to multiple resources
  progress    UserProgress[]
  reflections Reflection[]
  bookmarks   Bookmark[]
  flashcards  Flashcard[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- NEW MODEL: Lesson Resources ---
model Resource {
  id       String       @id @default(uuid())
  lessonId Int
  title    String // e.g., "Lesson PDF", "Reference Link"
  url      String // The link to the file or website
  type     ResourceType @default(LINK)

  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

enum ResourceType {
  PDF
  LINK
  VIDEO
  TEXT
}

model UserProgress {
  id       String @id @default(uuid())
  userId   String
  lessonId Int

  isCompleted Boolean @default(false)
  lastPlayed  Int     @default(0) // Audio timestamp in seconds

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
}

model Reflection {
  id       String  @id @default(uuid())
  userId   String
  lessonId Int
  content  String  @db.Text
  isUrdu   Boolean @default(false)
  isPublic Boolean @default(false) // Social feature

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)
}

model Bookmark {
  id        String   @id @default(uuid())
  userId    String
  lessonId  Int
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
}

// --- Spaced Repetition (Anki Style) ---

model Flashcard {
  id       String @id @default(uuid())
  lessonId Int
  front    String // e.g., Arabic Word
  back     String // e.g., Meaning

  lesson   Lesson                  @relation(fields: [lessonId], references: [id])
  progress UserFlashcardProgress[]
}

model UserFlashcardProgress {
  id          String @id @default(uuid())
  userId      String
  flashcardId String

  box        Int      @default(1) // Box 1 to 5 (Leitner system)
  nextReview DateTime @default(now())

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  flashcard Flashcard @relation(fields: [flashcardId], references: [id], onDelete: Cascade)

  @@unique([userId, flashcardId])
}

// --- Gamification ---

model Badge {
  id          String @id @default(uuid())
  name        String
  description String
  icon        String // Lucide icon name or image URL
  xpReward    Int

  users UserBadge[]
}

model UserBadge {
  userId    String
  badgeId   String
  awardedAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  badge Badge @relation(fields: [badgeId], references: [id])

  @@id([userId, badgeId])
}

model BannedUser {
  id       String   @id @default(uuid())
  email    String   @unique
  reason   String?
  bannedBy String   @default("SYSTEM") // ID of admin who banned
  bannedAt DateTime @default(now())
}
